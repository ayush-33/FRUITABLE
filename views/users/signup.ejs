<% layout("layouts/boilerplate") %>
<style>
    .anchor {
        margin-top: 1rem ;
        display: block;
    }
</style>
<div class="container">
  <div class="row mt-3">
    <div class="col-12 col-md-6 offset-md-3">
      <h1 class="text-center">SignUp on Fruitable</h1>
    </div>

    <div class="col-12 col-md-6 offset-md-3 mt-2">
      <form action="/user/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input name="username" id="username" type="text" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input name="email" id="email" type="email" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" id="password" type="password" class="form-control" required>
          <div class="valid-feedback">Password looks good</div>
        </div>

        <button class="btn btn-success w-100">SignUp</button>
      </form>

      <a href="/user/login" class="anchor">Already a member? Login</a>
    </div>
  </div>
</div>
