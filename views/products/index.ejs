<% layout("layouts/boilerplate") %>
<style>
  /* section */
  * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.section {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 450px;
  overflow: visible;
  width: 100%;
  margin: 0 !important;
  padding: 0 !important;
  flex-grow: 1;
}

.section::before {
  width: 100%;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("https://pixy.org/src2/582/5820628.jpg") no-repeat center;
  background-size: cover;
  filter: brightness(1.1) blur(6px) saturate(1.2);
  transform: scale(1.02);
  z-index: 0;
}

.left-section {
  position: relative;
  z-index: 1;
  flex: 1;
  padding-right: 2rem;
}
.tagline {
  color: orange;
  font-size: 1.3rem;
  margin-left: 4rem;
  margin-top: 2rem;
  font-weight: 500;
}
.left-section h1 {
  color: #8cc63f;
  font-size: 4rem;
  line-height: 1.2;
  font-weight: bold;
  margin-left: 4rem;
}
.section-search{
  display: flex;
  align-items: center;
  margin: 4rem;
  max-width: 450px;
  background: white;
  border-radius: 50px;
  border: 2px solid orange;
  overflow: hidden;
}
.section-search input {
  flex: 1;
  padding: 1rem 1.5rem;
  border: none;
 outline: none;
 font-size: 1rem;

}
.section-btn {
  padding: 1rem 1.5rem;
  background: #8cc64f;
  color: white;
  font-weight: bold;
  border: none;
  border-left: 2px solid orange;
  border-radius: 50px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.section-btn:hover {
  background: orange;
}

.right-section {
  flex: 1;
  background-color: #ffb300;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300px;
  max-width: 400px;
  border: 1px solid transparent;
  z-index: 1;
  margin: 2rem 4rem 0 0 ;
}
.carousel {
  width: 100%;
  height: 100%;
  border-radius: 20px;
  overflow: hidden;
  position: relative;
}
.carousel-inner , .carousel-item {
  width: 100%;
  height: 100%;
}
.carousel-inner img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.carousel-control-prev,
.carousel-control-next {
  width: 40px;
  height: 40px;
  background: green;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
}
.carousel-control-prev {
  left: 16px;
}
.carousel-control-next {
  right: 16px;
}
.carousel-control-prev-icon,
.carousel-control-next-icon {
  filter: brightness(0) invert(1);
  background-size: 20px 20px;
}

/* feature-box */
.mid-sec {
  margin-top: 120px !important;
}
.feature-box {
  background-color: #f5f8fa;
  border-radius: 10px;
  padding: 30px 20px;
  text-align: center;
  margin-bottom: 30px;
  transition: 0.3 ease-in;
}
.pin-icon {
  width: 95px;
  height: 95px;
  background-color: #fdb515; 
  border-radius: 50% 50% 50% 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40px;
  position: relative;
}

.pin-icon::after {
      content: "";
      position: absolute;
      bottom: -15px;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 0;
      border-left: 20px solid transparent;
      border-right: 20px solid transparent;
      border-top: 20px solid #fdb515;
    }

.feature-box h5 {
  font-weight: 600;
  margin-top: 20px !important;
  color: #1d2d35;
}
.feature-box p {
      font-size: 16px;
      color: #606d76;
}
</style>

<section class="section">
<div class="left-section">
  <p class="tagline">100% Organic Foods</p>
  <h1>Organic Veggies & Fruits Foods</h1>
  <div class="section-search">
    <input type="text" placeholder="Search" >
    <button class="section-btn" type="submit"> Submit Now</button>
  </div>
</div>

  <div class="right-section">
    <div id="carouselExample" class="carousel slide"  data-bs-ride="carousel">

      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img src="https://t3.ftcdn.net/jpg/01/63/13/24/360_F_163132467_pjYgaNoWnL9NA8fj9NspMyxdnGDLILXx.jpg" class="d-block w-100" alt="image">
        </div>
        <div class="carousel-item">
          <img src="https://ohioline.osu.edu/sites/ohioline/files/imce/Family_and_Consumer_Sciences/HYG-5588_Fig3-fruits-and-vegetables.jpeg" class="d-block w-100" alt="image">
        </div>
        <div class="carousel-item">
          <img src="https://cdn.i-scmp.com/sites/default/files/d8/images/methode/2020/03/27/c2cb14e2-6d8f-11ea-b0ed-5e14cf8eb9e1_972x_180141.JPG" class="d-block w-100" alt="image">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container my-5 mid-sec">
  <div class="row text-center g-4.5">
    
    <div class="col-md-3">
      <div class="feature-box">
        <div class="pin-icon">
          <i class="fa-solid fa-car-side fa-2x text-white"></i>
        </div>
        <h5>Free Shipping</h5>
        <p>Free on order over $300</p>
      </div>
    </div>

    <div class="col-md-3">
      <div class="feature-box">
        <div class="pin-icon">
          <i class="fa-solid fa-user-shield fa-2x text-white"></i>
        </div>
        <h5>Security Payment</h5>
        <p>100% security payment</p>
      </div>
    </div>

    <div class="col-md-3">
      <div class="feature-box">
        <div class="pin-icon">
          <i class="fa-solid fa-right-left fa-2x text-white"></i>
        </div>
        <h5>30 Day Return</h5>
        <p>30 day money guarantee</p>
      </div>
    </div>

  <div class="col-md-3">
    <div class="feature-box">
      <div class="pin-icon">
        <i class="fa-solid fa-phone fa-2x text-white"></i>
      </div>
      <h5>24/7 Support</h5>
      <p>Support every time fast</p>
    </div>
</div>

</div>
</div>

<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
  <% allitems.forEach((product) => { %>
  <div class="col h-100">
    <a href="/product/<%= product._id %>" class="product-links">
      <div class="card product-card h-100">
        <div class="image-container">
          <img
            src="<%= product.image.url %>"
            alt="Product Image"
            class="card-img-top"
          />
          <span class="category-badge"><%= product.category %></span>
        </div>
        <div class="card-body">
          <h5 class="card-title"><b><%= product.name %></b></h5>
          <p class="card-text text-center description">
            <%= product.description %>
          </p>
          <p class="price">
            <b> &#8377;<%= product.price.toLocaleString("en-IN") %> / kg </b>
          </p>
          <button class="btn add-to-cart">
            <i class="fa-solid fa-lock"></i> Add to cart
          </button>
        </div>
      </div>
    </a>
  </div>
  <% }); %>
</div>
