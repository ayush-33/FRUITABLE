<% layout("layouts/boilerplate") %>
<style>
  /* section */
  * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.section {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 450px;
  overflow: visible;
  width: 100%;
  margin: 0 !important;
  padding: 0 !important;
  flex-grow: 1;
}

.section::before {
  width: 100%;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("/img/hero-img.jpg");
  background-size: cover; 
  z-index: 0;
}

.left-section {
  position: relative;
  z-index: 1;
  flex: 1;
  padding-right: 2rem;
}
.tagline {
  color: orange;
  font-size: 1.3rem;
  margin-left: 4rem;
  margin-top: 2rem;
  font-weight: 500;
}
.left-section h1 {
  color: #8cc63f;
  font-size: 4rem;
  line-height: 1.2;
  font-weight: bold;
  margin-left: 4rem;
}
.section-search{
  display: flex;
  align-items: center;
  margin: 4rem;
  max-width: 450px;
  background: white;
  border-radius: 50px;
  border: 2px solid orange;
  overflow: hidden;
}
.section-search input {
  flex: 1;
  padding: 1rem 1.5rem;
  border: none;
 outline: none;
 font-size: 1rem;

}
.section-btn {
  padding: 1rem 1.5rem;
  background: #8cc64f;
  color: white;
  font-weight: bold;
  border: none;
  border-left: 2px solid orange;
  border-radius: 50px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.section-btn:hover {
  background: orange;
}

.right-section {
  flex: 1;
  background-color: #ffb300;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300px;
  max-width: 400px;
  border: 1px solid transparent;
  z-index: 1;
  margin: 2rem 4rem 0 0 ;
}
.carousel {
  width: 100%;
  height: 100%;
  border-radius: 20px;
  overflow: hidden;
  position: relative;
}
.carousel-inner , .carousel-item {
  width: 100%;
  height: 100%;
}
.carousel-inner img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.carousel-control-prev,
.carousel-control-next {
  width: 40px;
  height: 40px;
  background: green;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
}
.carousel-control-prev {
  left: 16px;
}
.carousel-control-next {
  right: 16px;
}
.carousel-control-prev-icon,
.carousel-control-next-icon {
  filter: brightness(0) invert(1);
  background-size: 20px 20px;
}

/* feature-box */
.mid-sec {
  margin-top: 120px !important;
}
.feature-box {
  background-color: #f5f8fa;
  border-radius: 10px;
  padding: 30px 20px;
  text-align: center;
  margin-bottom: 30px;
  transition: 0.3 ease-in;
}
.pin-icon {
  width: 95px;
  height: 95px;
  background-color: #fdb515; 
  border-radius: 50% 50% 50% 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40px;
  position: relative;
}

.pin-icon::after {
      content: "";
      position: absolute;
      bottom: -15px;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 0;
      border-left: 20px solid transparent;
      border-right: 20px solid transparent;
      border-top: 20px solid #fdb515;
    }

.feature-box h5 {
  font-weight: 600;
  margin-top: 20px !important;
  color: #1d2d35;
}
.feature-box p {
      font-size: 16px;
      color: #606d76;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 45px;
}
.section-title {
  font-size: 42px;
  font-weight: 700;
  color: #45595b;
  margin-left: 30px;
}
.category-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 25px;
  margin-top: 10px;
  margin-right: 30px;
}
.category-btn {
  padding: 10px 30px;
  border-radius: 30px;
  background-color: #f3f5f7;
  border: none;
  color: #333;
  font-weight: 500;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  text-decoration: none;
}
.category-btn.active {
  background-color: #f0c14b;
  color: white;
}
/* Offer-Section */
.offer-section {
