<% layout("layouts/boilerplate") %> 
<style>
  .shop-head {
    color: #45595b;
  }
  .shop-ctg {
    color: #81c408;
    font-weight: 500;
  }
  .card img {
  object-fit: cover;
  height: 200px;
}

.card .badge {
  border-radius: 8px;
  font-size: 0.9rem;
  padding: 0.4em 0.7em;
}

.btn-outline-warning {
  color: #90C418;
  border-color: #90C418;
}

.btn-outline-warning:hover {
  background-color: #90C418;
  color: white;
}
.page-link.custom-page {
  border: 1px solid orange;
  color: black;
  border-radius: 15px;
  margin: 0 5px;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-link.custom-page:hover {
  background-color: #f0f0f0;
}

.page-link.custom-page.active-page {
  background-color: #96d200; /* green active */
  color: white;
  border-color: #96d200;
}
#price-value {
  font-weight: bold;
  color: #45595b;
  font-size: 1.3rem;
}
.shop-ctg.active {
  background-color: #e6f7d9;
  color: #45595b !important;
  border-radius: 8px;
  font-weight: bold;
  transition: background 0.2s;
}



</style>
<div class="contact-wrapper d-flex justify-content-center">
    <img src="/img/contact.jpg" alt="Contact Us" />
<h2>Shop </h2>
<ol class="list">
  <li ><a class="same" href="/">Home /</a></li>
  <li ><a class="same" href="/product/shop">Shop /</a></li>
  <li ><a class="diff" href="/product/contact">Contact</a></li>
</ol>
</div>

<div class="container my-4">
  <h1 class="fw-bold mb-4 shop-head">Fresh fruits shop</h1>
  

  <div class="row">
    <!-- Sidebar -->
    <div class="col-lg-3 d-flex flex-column">
      <div class="mb-4 ">
      <form class=" d-flex" role="search"  action="/product/search"> 
    <div class="input-group">
    <input class="form-control me-2"
           name="q"
          type="search"
          placeholder="Search"
          aria-label="Search">
    <button class="btn btn-outline-secondary" type="submit" style="background-color: #f0f0f0; color: grey;">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
    </div>
    </form>
</div>
<div class="d-block d-lg-none mb-3">
    <select class="form-select">
      <option value="" selected>Default Sorting: Nothing</option>
      <option value="1">Price Low to High</option>
      <option value="2">Price High to Low</option>
    </select>
  </div>


      
        <h4 class="fw-bold" style="color: #45595b;">Categories</h4>
      <ul class="list-unstyled" style="cursor: pointer;">
        <li class="mb-2 shop-ctg" data-category="">
        <i class="fa-brands fa-apple"></i> All Products
        </li>
    <li class="mb-2 shop-ctg" data-category="Fruit">
     <i class="fa-brands fa-apple"></i> Fruits
    </li>
   <li class="mb-2 shop-ctg" data-category="Vegetable">
    <i class="fa-brands fa-apple"></i> Vegetables
  </li>
  <li class="mb-2 shop-ctg" data-category="Bread">
    <i class="fa-brands fa-apple"></i> Breads
  </li>
  <li class="mb-2 shop-ctg" data-category="Meat">
    <i class="fa-brands fa-apple"></i> Meat
  </li>
  </ul>
  

        <h5 class="fw-bold mt-4">Price</h5>
      <input type="range" min="0" max="200" value="0" id="price-range">
      <p id="price-value">0</p>


<div class="position-relative my-3">
  <img src="/img/banner-fruits.jpg" alt="Fresh Fruits Banner" class="img-fluid rounded">
  <div class="position-absolute top-50 end-0 translate-middle-y me-3 text-warning fw-bold text-end" style="font-size: 1.8rem;">
    Fresh <br> Fruits <br> Banner
  </div>
</div>

    </div>

    <!-- Products Grid -->
    <div class="col-lg-9">
      <div class="d-flex justify-content-between align-items-center mb-3 d-none d-lg-flex">
        <div></div>
        <div>
          <select class="form-select">
            <option value="" selected>Default Sorting: Nothing</option>
            <option value="1">Price Low to High</option>
            <option value="2">Price High to Low</option>
          </select>
        </div>
      </div>
        
        <div class="row g-4" id="product-row">
            <% products.forEach(item => { %>
        <div class="col-md-6 col-lg-4 product-card-container d-flex ">
    <a href="/product/<%= item._id %>" class="product-links w-100">
      <div class="card product-card h-100"> 
        <div class="image-container">
          <img src="<%= item.image.url %>" class="card-img-top" alt="<%= item.name %>">
          <span class="category-badge"><%= item.category %></span>
        </div>
        <div class="card-body flex-grow-1 d-flex flex-column">
          <h5 class="card-title fw-bold"><%= item.name %></h5>
          <p class="card-text flex-grow-1">
            <%= item.description.split(' ').slice(0, 15).join(' ') %>
            <% if (item.description.split(' ').length > 15) { %>...<% } %>
          </p>
          <h6 class="fw-bold price" data-price="<%= item.price %>">&#8377;<%= item.price.toFixed(2) %> / kg</h6>
          <form method="post" action="/cart/add/<%= item._id %>" class="mt-auto">
            <button class="btn add-to-cart mb-4">
              <i class="fa-solid fa-lock"></i> Add to cart
            </button>
          </form>
        </div>
      </div>
    </a>
  </div>
            <% }) %>
        </div>
      
      <div id="no-products-message" style="display: none; text-align: center; margin-top: 20px;">
  <p class="fw-bold text-danger">No products found for your selected price.</p>
</div>

<nav aria-label="Page navigation" class="mb-3 mt-4">
  <ul class="pagination justify-content-center">

    <!-- Previous button -->
    <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link custom-page" href="?page=<%= currentPage - 1 %><% if (category) { %>&category=<%= category %><% } %>" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <span class="page-link custom-page" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </span>
      </li>
    <% } %>

    <!-- Page numbers -->
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link custom-page <%= currentPage === i ? 'active-page' : '' %>" href="?page=<%= i %><% if (category) { %>&category=<%= category %><% } %>"><%= i %></a>
      </li>
    <% } %>

    <!-- Next button -->
    <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a class="page-link custom-page" href="?page=<%= currentPage + 1 %><% if (category) { %>&category=<%= category %><% } %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <span class="page-link custom-page" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </span>
      </li>
    <% } %>

  </ul>
</nav>


    </div>
  </div>
</div>


